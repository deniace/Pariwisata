<layout>

    <data>

        <import type="com.deni.pariwisata.view.SplashActivity" />

        <variable
            name="activity"
            type="SplashActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.SplashActivity">
        
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_splash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:elevation="12dp"
            app:cardCornerRadius="40dp"
            android:layout_margin="40dp">
            <ImageView
                android:id="@+id/iv_splash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/deni_ace"
                android:adjustViewBounds="true"
                />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/deni_ace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/deni_ace"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/deni_ace"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/created_by"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>